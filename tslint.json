{
    "defaultSeverity": "warning",
    "extends": [
        "tslint:recommended"
    ],
    "rules": {
        "indent": [
            true,
            "spaces",
            2
        ],
        "quotemark": [
            true,
            "single"
        ],
        "member-access": [true, "no-public"],
        "variable-name": {
            "options": [
              "check-format",
              "allow-leading-underscore"
            ]
        },
        "interface-name": [true, "never-prefix"]
    }
}